<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardView"
    android:layout_width="@dimen/movie_card_layout_width"
    android:layout_height="@dimen/movie_card_layout_height"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/movie_card_layout_margin"
    android:layout_marginEnd="@dimen/movie_card_layout_margin"
    android:layout_marginTop="@dimen/movie_card_layout_margin"
    android:layout_marginBottom="@dimen/movie_card_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/movieTitleText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_card_title_height"
            android:text="@string/movie_card_title"
            android:textAlignment="center"
            android:textSize="@dimen/movie_card_title_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movieDirectorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_card_director_text"
            android:textSize="@dimen/movie_card_director_text_size"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/moviePic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_card_image_height"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/movieReleaseDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_card_release_date_text"
            android:textSize="@dimen/movie_card_release_date_text_size"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/movieRatingHeadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/movie_card_rating_text"
                android:textAlignment="textEnd"
                android:textSize="@dimen/movie_card_rating_text_size" />

            <TextView
                android:id="@+id/movieRatingNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/movie_card_rating_number"
                android:textAlignment="center"
                android:textSize="@dimen/movie_card_rating_number_size" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>